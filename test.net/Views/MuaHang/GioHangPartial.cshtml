
<li class="dropdown head-dpdn" id="divGioHang" >
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-shopping-cart"></i><span class="badge">@ViewBag.TongSoLuong</span></a>
    <ul class="dropdown-menu anti-dropdown-menu w3l-msg">
        <li>
            <div class="notification_header">
                <h3>You have @ViewBag.TongSoLuong sản phẩm</h3>
            </div>
        </li>
        
        <li class="odd">
            <a href="#">
                <div class="user_img"><img src="" alt=""></div>
                <div class="notification_desc">
                    <p>@ViewBag.TongTien.ToString("#,##") </p>
                    <p><span> tổn tiền thanh toán</span></p>
                </div>
                <div class="clearfix"></div>
            </a>
        </li>
        
        <li>
            <div class="notification_bottom">
                <a href="@Url.Action("XemGioHang","MuaHang")">See all messages</a>
            </div>
        </li>
    </ul>
</li>
